<Window x:Class="TournamentManager.TextBoxDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:TournamentManager"
        mc:Ignorable="d"
        Title="AddPlayerWindow" Height="100" Width="200" WindowStartupLocation="CenterScreen" ResizeMode="NoResize">
    <StackPanel>
        <TextBox x:Name="textBox" HorizontalAlignment="Center" MinWidth="50"/>
        <Button Content="OK" HorizontalAlignment="Center" Click="Button_Click" />
    </StackPanel>
</Window>
